{
  "name": "zhipu-copilot-gateway",
  "version": "1.0.0",
  "description": "Ollama proxy & OpenAI chat gateway to Zhipu",
  "main": "dist/cli.js",
  "bin": { "zhipu-copilot-gateway": "dist/cli.js" },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/**/*.json dist/",
    "start": "infisical run -- node dist/cli.js",
    "dev": "infisical run -- ts-node-dev --respawn --transpile-only src/cli.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.0",
    "http-proxy": "^1.18.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.14",
    "@types/node": "^20.12.12",
    "@types/yargs": "^17.0.32",
    "copyfiles": "^2.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
